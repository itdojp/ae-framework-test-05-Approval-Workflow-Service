  "glossary": [
    {
      "term": "ApprovalRequest",
      "definition": "Business request created by requester and processed through approval steps."
    },
    {
      "term": "ApprovalTask",
      "definition": "Decision unit assigned to one approver in a specific workflow step."
    },
    {
      "term": "WorkflowDefinition",
      "definition": "Configurable set of steps that determines how approvals are evaluated."
    }
  ],
