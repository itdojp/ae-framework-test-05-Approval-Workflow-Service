  "usecases": [
    {
      "name": "Submit Request",
      "actor": "User",
      "steps": [
        {
          "step": 1,
          "description": "Requester creates a draft request with title amount and currency fields.",
          "type": "action"
        },
        {
          "step": 2,
          "description": "System selects one active workflow by priority and matching condition.",
          "type": "action"
        },
        {
          "step": 3,
          "description": "System creates initial approval tasks from the first workflow step.",
          "type": "action"
        },
        {
          "step": 4,
          "description": "System transitions request status from draft to in review.",
          "type": "action"
        }
      ]
    },
    {
      "name": "Update Request",
      "actor": "User",
      "steps": [
        {
          "step": 1,
          "description": "Requester updates mutable fields while status is draft or returned.",
          "type": "action"
        },
        {
          "step": 2,
          "description": "System validates title amount and currency constraints.",
          "type": "action"
        },
        {
          "step": 3,
          "description": "System rejects update when request is in review or terminal.",
          "type": "action"
        }
      ]
    },
    {
      "name": "Decide Approval Task",
      "actor": "User",
      "steps": [
        {
          "step": 1,
          "description": "Assignee opens pending task assigned in current workflow step.",
          "type": "action"
        },
        {
          "step": 2,
          "description": "Assignee decides approve, reject, or return with optional decision comment.",
          "type": "action"
        },
        {
          "step": 3,
          "description": "System updates request status according to ANY or ALL step mode.",
          "type": "action"
        },
        {
          "step": 4,
          "description": "System records audit entries for task decision and request transition.",
          "type": "action"
        }
      ]
    },
    {
      "name": "Resubmit Returned Request",
      "actor": "User",
      "steps": [
        {
          "step": 1,
          "description": "Requester fixes returned request fields.",
          "type": "action"
        },
        {
          "step": 2,
          "description": "Requester submits request again from RETURNED status.",
          "type": "action"
        },
        {
          "step": 3,
          "description": "System recreates first step approval tasks.",
          "type": "action"
        }
      ]
    }
  ],
